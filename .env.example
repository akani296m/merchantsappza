# Supabase Configuration
VITE_SUPABASE_URL=https://zzpznlecoaumargapikq.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (for server-side operations like webhooks)
# ⚠️ NEVER expose this in frontend code - only use in API routes
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Polar Payments Configuration
# Get these from https://polar.sh dashboard

# Polar Access Token (Server-side API key)
POLAR_ACCESS_TOKEN=your_polar_access_token_here

# Polar Webhook Secret (for verifying webhook signatures)
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret_here

# Polar Environment: 'sandbox' for testing, 'production' for live
POLAR_ENVIRONMENT=sandbox

# Polar Success URL (where to redirect after successful checkout)
POLAR_SUCCESS_URL=https://your-domain.com/billing/success

# Polar Return URL (shown as back button in checkout)
POLAR_RETURN_URL=https://your-domain.com

# Polar Product Price IDs (get these from Polar dashboard → Products)
# These are visible in frontend, so they use VITE_ prefix
VITE_POLAR_LAUNCH_PRODUCT_ID=price_xxxxxxxxxxxxxxxxxxxxx
VITE_POLAR_GROWTH_PRODUCT_ID=price_xxxxxxxxxxxxxxxxxxxxx

# For local development, you can use:
# POLAR_SUCCESS_URL=http://localhost:5173/billing/success
# POLAR_RETURN_URL=http://localhost:5173
